.game
  .soldier
    height: 50px
    position: absolute
    top: 100px
    left: 100px
    z-index: 2

    .explode
      display: none
      background-image: url('/img/explosion.png')
      height: 64px
      width: 64px

    .nick
      z-index: 3
      background-color: black
      color: white
      padding: 5px 10px
      border-radius: 5px
      position: relative
      top: -50px
      left: 30px

      .nick-arrow
        position: absolute
        top: 28px
        left: 15px
        border: 7px solid transparent
        border-top: 10px solid black

    img
      position: absolute
      top: 0

  .bullet
    position: absolute
    width: 10px
    height: 10px
    background-color: white
    border-radius: 10px

  .login-info
    font-size: 55px
    text-align: center
    margin-top: 100px
